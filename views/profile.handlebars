<div class="container">
  <div class="main-body">

    <div class="row gutters-sm">

      <div class="col-md-4 mb-3">
        <div class="card" style="background-color: #BFDBAE;">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              {{#if user.image}}
              <img src="/images/{{user.image}}" alt="Profile Pic" width="150">
              {{else}}
              <img src="/images/avatar.png" alt="Profile Pic" width="150">
              {{/if}}
              <div class="mt-3">
                <h2 id='profile-username'>{{user.username}}</h2>
                <form id='profile-pic-form' action="/" method="POST" encType="multipart/form-data">
                  <h6>Change Profile Picture</h6>
                  <input type='file' name='profilePic' accept="image/*" id='profile-pic' />
                  <input type="submit" class='bnt'>
                  <div id='follow-user-div'>

                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      {{!-- {{#if user_id}}
      <div>
        <p>Hello there visitor</p>
      </div>
      {{else}}
      <div>
        <p>Hello there {{user.username}}</p>
      </div>
      {{/if}} --}}
      <div class="col-md-8">
        <div class="card mb-3" style="background-color: #BFDBAE;">
          <div class="card-body" style="background-color: darkgreen">
            <div class="row">
              <h3 style="color:white">Upvoted Games</h3>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              {{#each user.ranks}}
              <a href='/game/{{game_id}}' style="color: black">{{game.game_name}}</a>
              <br>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <div class="card mb-3" style="background-color: #BFDBAE;">
          <div class="card-body" style="background-color: darkgreen;">
            <div class="row gutters-sm">
              <h3 style="color:white">Your Comments</h3>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              {{#each user.comments}}
              <p style="color:black">{{game.game_name}}: <q>{{comment_text}}</q></p>

              {{/each}}
            </div>
          </div>
        </div>

        <div class="col-md-8">
          <div class="card mb-3" style="background-color: #BFDBAE;">
            <div class="card-body" style="background-color: darkgreen;">
              <div class="row gutters-sm">
                <h3 style="color:white">Following</h3>
              </div>
            </div>

            <div class="row">
              {{#each user.followings}}
              <div class="col-sm-5">
                <button onclick='followingBtnHandler(this)' class='following-btn'><span style='opacity:0'
                    id='follow-id'>{{id}}</span>{{following_username}}</button>
                <br>
              </div>
              <div id='unfollow-btn-div-{{id}}' class='col-sm-5'>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>

    {{#if loggedIn}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>
    <script src="/javascript/profile.js" defer></script>
    {{/if}}